<section>
  <h1 class="mt-2 text-center">Add Food to Recipe</h1>
  <hr>
  <div class="container mt-5" style="clear:both;">
    <%= form_with model: @recipe_food, url: recipe_recipe_foods_path(params[:recipe_id]), scope: :recipe_food do |form| %>
      <div class="form-group">
        <%= form.label :Food %>
        <br/>
        <%= form.select :food_id, @foods.map { |t| [t.name, t.id]}, {}, class: 'form-control' %>
      </div>
      <div class="form-group">
        <%= form.label :Quantity %>
        <br/>
        <%= form.number_field :quantity, step: 1, placeholder: "Quantity", required: true, class: 'form-control' %>
      </div>
      <div class="actions"><%= form.submit class: 'btn btn-primary' %></div>
    <% end %>
  </div>
</section>
